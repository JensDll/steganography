<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup Condition="'$(DOTNET_RUNNING_IN_CONTAINER)' == 'true'">
    <PublishAot>true</PublishAot>
  </PropertyGroup>

  <PropertyGroup Condition="'$(DOTNET_RUNNING_IN_CONTAINER)' != 'true'">
    <PublishAot>false</PublishAot>
    <IsAotCompatible>true</IsAotCompatible>
    <EnableConfigurationBindingGenerator>true</EnableConfigurationBindingGenerator>
    <EnableRequestDelegateGenerator>true</EnableRequestDelegateGenerator>
  </PropertyGroup>

  <ItemGroup Condition="'$(DOTNET_RUNNING_IN_CONTAINER)' == 'true'">
    <ProjectReference Include="..\AspNetShared\AspNetShared.csproj"/>
    <ProjectReference Include="..\Domain\Domain.csproj"/>
  </ItemGroup>

  <ItemGroup Condition="'$(DOTNET_RUNNING_IN_CONTAINER)' != 'true'">
    <ProjectReference Include="..\..\AspNetShared\src\AspNetShared.csproj"/>
    <ProjectReference Include="..\..\Domain\src\Domain.csproj"/>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="8.0.0"/>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="6.5.0"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MinimalApiBuilder" Version="5.0.0-beta.4" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Steganography.Test"/>
  </ItemGroup>

</Project>
